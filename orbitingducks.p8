--update
--called 30 times a second

function _update()
 if btn(⬆️) then playery -= speed end
 if btn(⬇️) then playery += speed end
 if btn(⬅️) then playerx -= speed end
 if btn(➡️) then playerx += speed end
 
 offx=cos(t()*1)*(sin(t()*0.1)*20)
 offy=sin(t()*1)*(sin(t()*0.1)*20)
 
end
-->8
--draw
--called to render each frame

function _draw()
 --cls()
 spr(0, playerx+offx, playery+offy)
 spr(1, playerx-offx, playery-offy)
end
